# Universal Agent Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=5000

# MindGarden API Configuration
MINDGARDEN_API_BASE=https://api.example.com
MINDGARDEN_AUTH_BASE=https://auth.example.com

# Auth0 Configuration
AUTH0_DOMAIN=auth.example.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.example.com

# Device Configuration (optional overrides)
# DEVICE_CONNECT_TIMEOUT=30
# DEVICE_STREAM_TIMEOUT=5
# BUFFER_SIZE=1000